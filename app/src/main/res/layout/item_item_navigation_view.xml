<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingRight="@dimen/base_indent"
    android:paddingLeft="@dimen/base_indent"
    android:paddingVertical="@dimen/base_indent_half">

    <ImageView
        android:id="@+id/item_navigation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/ic_settings_24dp"
        android:tint="@color/text_color_grey"/>

    <TextView
        android:id="@+id/item_navigation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_navigation_image"
        android:layout_margin="4dp"
        android:text="Settings"
        android:fontFamily="sans-serif"
        android:textColor="@color/text_color_grey"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_centerVertical="true"/>

</RelativeLayout>